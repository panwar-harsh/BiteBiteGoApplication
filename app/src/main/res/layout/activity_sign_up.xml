<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/yeon_sung"
        android:gravity="center"
        android:text="Waves of Food"
        android:textColor="@color/black"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deliver Favourite Food"
        android:textSize="16dp"
        android:fontFamily="@font/lato"
        android:textColor="#58E48B"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yeon_sung"
        android:text="Sign Up Here"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#58E48B"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:gravity="center"/>
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:elevation="8dp"
        android:background="@drawable/edittext_background"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="15dp"
        android:hint="Name"
        android:inputType="text"
        android:paddingLeft="15dp" /> <EditText
    android:id="@+id/editTextTextEmailAddress"
    android:layout_width="350dp"
    android:layout_height="57dp"
    android:elevation="8dp"
    android:background="@drawable/edittext_background"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:drawableLeft="@drawable/mail"
    android:drawablePadding="15dp"
    android:hint="Email"
    android:inputType="textEmailAddress"
    android:paddingLeft="15dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="15dp"
        android:elevation="8dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:fontFamily="@font/yeon_sung"
        android:gravity="center"
        android:text="Or\nSign Up with"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2E2D2D"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/googleButton"
            android:layout_width="152dp"
            android:layout_height="57dp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/googleicon"
            android:paddingLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="30dp"
            android:textAllCaps="false"
            android:elevation="8dp"
            android:textSize="18dp"
            android:text="Google" />
        <Button
            android:id="@+id/facebookButton"
            android:layout_width="152dp"
            android:layout_height="57dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:elevation="8dp"
            android:textSize="18dp"
            android:background="@drawable/edittext_background"
            android:textAllCaps="false"
            android:drawableStart="@drawable/facebook"
            android:text="Facebook" />



    </LinearLayout>

    <Button
        android:id="@+id/CreateAccount"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:background="@drawable/button_background"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="27dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/yeon_sung"
        />
    <TextView
        android:id="@+id/AlreadyHave"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already Have An Account?"
        android:textColor="#58E48B"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>
</LinearLayout>

